<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="423dp"
            android:layout_height="731dp" app:srcCompat="@drawable/image"
            android:id="@+id/imageView" android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Hikers"
            android:layout_width="219dp"
            android:layout_height="69dp"
            android:id="@+id/textView" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.524" app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="50sp" android:textColor="#F8F5F1F1"/>
    <TextView
            android:text="Lattitude : "
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:id="@+id/lattitude" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.994"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"
            android:textColor="#FAF1EBEB" android:textSize="24sp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="52dp"/>
    <TextView
            android:text="Longitude : "
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:id="@+id/longitude" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"
            android:textColor="#FAF1EBEB" android:textSize="24sp" app:layout_constraintTop_toBottomOf="@+id/lattitude"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Accuracy"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:id="@+id/accuracy" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"
            android:textColor="#FAF1EBEB" android:textSize="24sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/longitude"/>
    <TextView
            android:text="Altitude :"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:id="@+id/altitude" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.964"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"
            android:textColor="#FAF1EBEB" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/accuracy" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Address: "
            android:layout_width="305dp"
            android:layout_height="234dp"
            android:id="@+id/address"
            app:layout_constraintTop_toBottomOf="@+id/altitude" android:layout_marginTop="48dp"
            android:textSize="24sp" android:textColor="#F8F7F3F3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.499"/>
</androidx.constraintlayout.widget.ConstraintLayout>